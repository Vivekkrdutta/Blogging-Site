<%-include("header.ejs")%>
      <style>
        .row.g-5{
          padding: 0 50px;
          padding-right:10px;
        }
        .blog-post.mt-4.px-1{
          font-family: cursive;
          /* font-size:1rem; */
          padding:0px 5px;
        }
      </style>
      <link href = "/style.css" rel = "stylesheet"/>
        <div class="row g-5">
            <div class="col-md-8" style = "margin-right:0px;">
              <h3 class="pb-3 mb-2 fst-italic border-bottom">
                <%=name%> : Read Blog          
              </h3>
              <p class = "mb-2"><em><strong><%=posttime%></strong></em></p>
                <p><bold><%=blogs[currentitemid].blogcontent%></bold></p>        
        
              <nav class="blog-pagination" aria-label="Pagination">
                <a class="btn btn-outline-primary rounded-pill" href="/section/<%=name%>/<%=currentitemid*1 - 1%>/view">Previous Blog</a>
                <a class="btn btn-outline-secondary rounded-pill" aria-disabled="true" href = "/section/<%=name%>/<%=currentitemid*1+1%>/view">Next Blog</a>
              </nav>
                <img src = <%=blogs[currentitemid].imagelink %> style = "height : 300px; width:auto;border:solid 1px blue;border-radius:10px;float:left; margin-right:20px" class = "mt-3"/>
              <article class = "blog-post mt-4 px-1" style = "text-align: justify;">
                <%=blogs[currentitemid].ldes%>
              </article>
            </div>

            <div class="col-md-4">
              <div class="position-sticky">
                <div>
                  <h4 class="fst-italic">Recent posts</h4>
                  <ul class="list-unstyled">
                    <%for(let i = 0;i<blogs.length;i++){%>
                    <li stylel = "width:200px;">
                      <a class="d-flex flex-column flex-lg-row gap-4 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top px-2" href="/section/<%=name%>/<%=i%>/view">
                        <!-- <svg class="bd-placeholder-img" width="100%" height="96" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="#777"></rect></svg> -->
                        <img/ src = "<%=blogs[i].imagelink%>" height = "100">
                        <div class="col-lg-4">
                          <small class="text-body-secondary"><%=blogs[i].posttime%></small>
                        </div>
                      </a>
                    </li>
                    <%}%>
                  </ul>
                </div>        
              </div>
            </div>
          </div>
<%-include("footer.ejs")%>